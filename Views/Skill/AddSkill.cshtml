@model Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Ekle</div>
					</div>
					<div class="card-body">


						<form method="post">
							<label>Yetenek Adı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Beceri Yüzdesi</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />
							<button class="btn btn-info">Yetenek Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>