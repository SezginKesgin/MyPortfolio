@model List<ToDoList>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi <a href="/ToDoList/CreateToDoList/" class="btn btn-info" style="float: right;">Yapılacak Yeni İş Ekle</a></div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col" style="width:1%;">Durum</th>
									<th scope="col" style="width:1%;">Sil</th>
									<th scope="col" style="width:1%;">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date.ToShortDateString()</td>
										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangeToDoListStatusFalse/@item.ToDoListId" class="btn btn-dark" style="width:200px;">Yapılmadı Olarak İşaretle</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeToDoListStatusTrue/@item.ToDoListId" class="btn btn-primary" style="width:200px;">Yapıldı Olarak İşaretle</a></td>
										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div>