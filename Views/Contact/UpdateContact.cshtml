@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Alanı</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Alanı Güncelle</div>
					</div>
					<div class="card-body">


						<form method="post">
							<input type="hidden" asp-for="ContactId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea asp-for="Description" rows="3" class="form-control"></textarea>
							<br />
							<label>Telefon 1</label>
							<input type="text" asp-for="Phone1" class="form-control" />
							<br />
							<label>Telefon 2</label>
							<input type="text" asp-for="Phone2" class="form-control" />
							<br />
							<label>E-Posta 1</label>
							<input type="text" asp-for="Email1" class="form-control" />
							<br />
							<label>E-Posta 2</label>
							<input type="text" asp-for="Email2" class="form-control" />
							<br />
							<label>Adres</label>
							<input type="text" asp-for="Address" class="form-control" />
							<br />
							<button class="btn btn-success">İletişim Alanı Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
