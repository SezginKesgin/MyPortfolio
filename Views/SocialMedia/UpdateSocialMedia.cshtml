@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Platformları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgisi Güncelle</div>
					</div>
					<div class="card-body">


						<form method="post">
							<input type="hidden" asp-for="SocialMediaId" />
							<label>Deneyim Başlığı & Firma Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Ünvan</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />
							<button class="btn btn-success">Sosyal Medya Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>