@model SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Platformları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Ekle</div>
					</div>
					<div class="card-body">


						<form method="post">
							<label>Sosyal Medya Adı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Bağlantı Adresi</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>İkon</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />
							<button class="btn btn-info">Sosyal Medya Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>