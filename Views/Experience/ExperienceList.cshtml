@model List<Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim Listesi <a href="/Experience/AddExperience/" class="btn btn-info" style="float: right;">Yeni Deneyim Ekle</a></div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Deneyim Yeri</th>
										<th scope="col">Ünvan</th>
										<th scope="col">Tarih</th>
										<th scope="col" style="width:1%;">Sil</th>
										<th scope="col" style="width:1%;">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach(var item in Model)
									{
									count++;
									<tr>
											<td>@count</td>
											<td>@item.Heading</td>
											<td>@item.Title</td>
											<td>@item.Date</td>
											<td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
											<td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	

